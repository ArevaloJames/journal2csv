@model RowCountsViewModel


@if (TempData["ExportSuccess"] != null)
{
    <div class="text-center alert alert-success" role="alert">
        @TempData["ExportSuccess"]
    </div>
}

<head>
    <div class="text-center">
    <title>Row Counts</title>
    </div>
</head>
<body>
    <div class="text-center">
        <h1>Data Count</h1>
    </div>
    
    <div id="countsAlert" class="text-center alert alert-info" role="alert">
        <!-- Format row counts with commas -->
        Fuels: @String.Format("{0:n0}", Model.FuelsRowCount) rows<br>
        Safe Drop: @String.Format("{0:n0}", Model.SafeDropRowCount) rows<br>
        Lubes: @String.Format("{0:n0}", Model.LubesRowCount) rows
    </div>
</body>
<div class="text-center">
<button id="closeTabButton" class="text-center btn btn-danger">CLOSE</button>
</div>
@section Scripts {
    <script>
        document.getElementById('closeTabButton').addEventListener('click', function () {
            // Close the current tab
            window.close();
        });
    </script>
}
